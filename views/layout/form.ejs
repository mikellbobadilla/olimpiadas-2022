  <body class="text-center bg-dark text-light">

    <main class="form-signin">
      <form action=<%=accion %> method="post">
        <img class="mb-4" src="/users/assets/brand/bootstrap-logo.svg" alt="" width="72" height="57">
        <h1 class="h3 mb-4 fw-normal">
          <%= title %>
        </h1>

        <% if (error) {%>
          <p class="<%=status %>">
            <%= error_message %>
          </p>
          <% } %>
            <div class="form-floating mb-2">
              <input type="text" class="form-control bg-dark text-light" id="username" placeholder="name"
                name="username">
              <label for="username" class="text-light">Username</label>
            </div>
            <div class="form-floating">
              <input type="password" class="form-control bg-dark text-light" id="password" placeholder="Password"
                name="password">
              <label for="password" class="text-light">Password</label>
            </div>
            <a href=<%=url %> class="mt-4 mb-4w-100" tabindex="-1" role="button" aria-disabled="true">
              <%= message %>
            </a>
            <button class="w-100 btn btn-lg btn-primary mt-3" type="submit">Iniciar sesion</button>

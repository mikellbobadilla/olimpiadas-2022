<%- include('./header.ejs') -%>

  <main class="container-md mt-5">

    <% if (notification) {%>
      <p class="<%=status %>">
        <%= noti_message %>
      </p>
      <% } %>

        <form action="/museos/create" method="post">
          <h1 class="mb-4">Agregar Museo</h1>
          <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Nombre</label>
            <input type="text" class="form-control bg-dark text-light" id="exampleInputEmail1"
              aria-describedby="emailHelp" name="nombre">
          </div>
          <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label ">Direccion</label>
            <input type="text" class="form-control bg-dark text-light" id="exampleInputPassword1" name="direccion">
          </div>
          <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label ">Telefono</label>
            <input type="text" class="form-control bg-dark text-light" id="exampleInputPassword1" name="telefono">
          </div>
          <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label ">Email de contacto</label>
            <input type="email" class="form-control bg-dark text-light" id="exampleInputPassword1" name="email">
          </div>
          <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label ">Descripcion <span class="text-danger">(ejmp: tiene
                rampa
                para
                discapacitados)</span></label>
            <input type="text" class="form-control bg-dark text-light" id="exampleInputPassword1" name="descripcion">
          </div>
          <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label ">Horarios <span class="text-danger">(ejmp: lun-vie:
                10-16
                hrs</span></label>
            <input type="text" class="form-control bg-dark text-light" id="exampleInputPassword1" name="horario">
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
  </main>

  <%- include('./footer.ejs') -%>